<div class="container mt-5">
  <div class="row">
    <div class="center-block">
<P><strong>プロフィール設定</strong></P>
<% if @customer.email == 'guest@guest.com'%>
      　<p>ゲストユーザーはユーザー情報の編集ができません。</p>
<% else %>
<%= form_with model: @customer ,url: customers_information_path, method: :patch do |f| %>


<div class="form-group">
  <label for="profile_image"></label>
  <%= f.file_field :profile_image, accept: "image/*" %>
</div>

<div class="form-group">
  <label for="nickname">ニックネーム</label>
  <%= f.text_field :nickname %>
</div>

<div class="form-group">
  <label for="email">メールアドレス</label>
  <%= f.text_field :email %>
</div>
<div class="form-group">
  <label for="self_introduction">自己紹介</label>
  <%= f.text_field :self_introduction %>
</div>

<div class="form-group">
  <%= f.submit '編集内容を保存',class:"btn btn-success"%>
</div>
<% end %>
<%= link_to "退会する",customers_unsubscribe_path, class:"btn btn-danger" %>
<% end %>
</div>
</div>
</div>