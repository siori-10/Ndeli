<div class="container mt-5 mb-5">

  <h4>新着レシピ</h4>
  <div class="row">
  <table>
    <tbody>

      <% @recipes.each do |recipe| %>
        <div class="top_recipe">
          <div class="recipe_image">
            <%= link_to recipe_path(recipe.id) do %>
              <%= image_tag recipe.get_image(400,400) %>
            <% end %>
          </div>
          <div>
            <h4><%= recipe.dish_name %></h4>
          </div>
          <div>
            <%= recipe.recipe_description %>
          </div>
        </div>
        <% end %>
    </tbody>
  </table>
  </div>

  <%= link_to "すべてのレシピを見る", recipes_path %>
  <%= paginate @recipes %>
</div>