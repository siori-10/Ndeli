<div class="container mt-5">

  <h4>新着レシピ</h4>
  <div class="row">
  <table>
    <tbody>
      
      <% @recipes.each do |recipe| %>
        <tr>
          <td><%= link_to recipe_path(recipe.id) do %><%= image_tag recipe.get_image(200,200) %><% end %></td>
          <td><%= recipe.dish_name %></td>
          <td><%= recipe.recipe_description %></td>
        </tr>
        <% end %>
    </tbody>
  </table>
  </div>
 
  <%= link_to "すべてのレシピを見る", recipes_path %>
  <%= paginate @recipes %>
</div>