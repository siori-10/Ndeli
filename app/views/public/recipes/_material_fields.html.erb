<div class="nested-fields">
  <div class="form-group">
    <div class="row">
      <div class="col-md-9">
        <%= f.text_field :material_name, class: "form-control", placeholder: "材料", required: true%>
      </div>
      <div class="col-md-3">
        <%= f.text_field :quantity, class: "form-control", placeholder: "分量", required: true %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="row">
      <div class="col-md-3 ml-auto">
        <%= link_to_remove_association "削除", f, class: "btn btn-danger btn-block btn-sm" %>
      </div>
    </div>
  </div>
</div>