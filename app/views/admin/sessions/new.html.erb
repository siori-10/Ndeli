<div class="container mt-5">
  <div class ="row">
   <div class="rounded border border-secondary col-lg-4 offset-lg-4">

<p><storong>管理者ログイン</storong></p>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :メールアドレス %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"col-lg-12" %>
  </div>

  <div class="field">
    <%= f.label :パスワード %>
    <%= f.password_field :password, autocomplete: "current-password", class:"col-lg-12" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "ログイン", class: "btn btn-outline-success col-lg-12 mb-3" %>
  </div>
<% end %>

<%= render "admin/shared/links" %>
</div>
</div>
</div>