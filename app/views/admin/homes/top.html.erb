<div class="container mt-5">
<div class="row">
  <div class="col-3">
    <% @categories.each do |categoriy| %>
          <li class="list-group-item">
          <%= link_to categoriy.categoriy_name ,admin_root_path(categoriy_id: categoriy.id) %>
          </li>
        <% end %>
  </div>
  <div class="col-9">

<% if @word %>
<h2><%= @word %>のレシピ</h2>
<% else %>
<h2>すべてのレシピ</h2>
<% end %>

<table class="table">
  <tbody>

  <% @recipes.each do |recipe| %>
  <tr>
    <td><%= link_to admin_recipe_path(recipe.id) do %><%= image_tag recipe.get_image(200,200) %><% end %></td>
    <td><strong><%= recipe.dish_name %></strong></td>
    <td><%= recipe.recipe_description %></td>
    <td><%= link_to "削除する",admin_recipe_path(recipe.id), method: :delete, "data-confirm" => "本当に削除しますか？" ,class:"btn btn-danger" %></td>
  </tr>
    <% end %>
    <%= paginate @recipes %>
</tbody>
</table>

</div>
</div>
</div>