<div class="container mt-5">
  <div class="row">
    <div class="col">
<p><strong>会員一覧</strong></p>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>ID</th>
      <th>ニックネーム</th>
      <th>メールアドレス</th>
      <th>ステータス</th>
    </tr>
  </thead>

  <tbody>
    <% @customer.each do |customer| %>
    <tr>
      <td><%= customer.id %></td>
      <td><%= link_to admin_customer_path(customer.id) do %><%= customer.nickname %><% end %></td>
      <td><%= customer.email %></td>
      <td><% if customer.is_deleted == false %>
      <span class="text-info"> 有効</span>
      <% else %>
      <span class="text-muted"> 退会</span>
      <% end %></td>
      <% end %>
    </tr>
  </tbody>
</table>
<%= paginate @customer %>
</div>
</div>
</div>