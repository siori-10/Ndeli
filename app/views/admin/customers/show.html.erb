<div class="container mt-5">
 <p><strong><%= @customer.nickname %></strong>さんの会員詳細</p>
 <table class="table">
  <tbody>
   <tr>
    <td>ID  <%= @customer.id %></td>
   </tr>
   <tr>
    <td><%= image_tag @customer.get_image_profile(150,150)%></td>
    <td><%= @customer.nickname %></td>
   </tr>
   <tr>
    <td>メールアドレス</td>
    <td><%= @customer.email %></td>
   </tr>
   <tr>
    <td>自己紹介</td>
    <td><%= @customer.self_introduction %></td>
   </tr>
   <tr>
    <td>ステータス</td>
    <td>
     <% if @customer.is_deleted == false %>
      <span> 有効</span>
       <% else %>
      <span> 退会</span>
       <% end %>
    </td>
   </tr>
  </tbody>
 </table>
  <%= link_to "編集する", edit_admin_customer_path, class:"btn btn-success" %>
</div>
